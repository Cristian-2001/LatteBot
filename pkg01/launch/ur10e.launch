<?xml version="1.0"?>
<launch>

    <param name="robot_description" 
        command ="$(find xacro)/xacro --inorder $(find pkg01)/urdf/ur10e.urdf.xacro"/>

    <node name="robot_state_pub" pkg="robot_state_publisher" type="robot_state_publisher" />

    <node name="rviz" pkg="rviz" type="rviz"
        args="-d $(find pkg01)/config/rvizconfig01.rviz"/>

    <arg name="use_gui" default="true"/>

    <node name="joint_state_pub" pkg="joint_state_publisher" type="joint_state_publisher" 
        output="screen" unless="$(arg use_gui)" />

    <node name="joint_state_pub_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"
        output="screen" if="$(arg use_gui)"/>

</launch>